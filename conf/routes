# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


#bobbit Api
GET    /api/bobbit/fetch                    controllers.BobbitController.fetchTubeLine
GET    /api/bobbit/:id                      controllers.BobbitController.find(id:String)
POST   /api/bobbit                          controllers.BobbitController.save
DELETE /api/bobbit/:id                      controllers.BobbitController.delete(id:String)
GET    /api/bobbit/job/all                  controllers.BobbitController.findAllJobByToken

#Account
GET     /api/bobbit/account/load                      controllers.BobbitController.findAccountByToken
POST    /api/bobbit/account                      controllers.BobbitController.account
GET     /api/bobbit/account/:id                  controllers.BobbitController.findAccount(id:String)
GET     /api/bobbit/account/username/:username   controllers.BobbitController.checkUserName(username: String)
GET     /api/bobbit/account/validate/:token      controllers.BobbitController.validateAccount(token: String)
POST    /api/bobbit/login                        controllers.BobbitController.login
POST    /api/bobbit/logout                       controllers.BobbitController.logout
GET     /api/bobbit/token/validate/:token        controllers.BobbitController.validateToken(token: String)

GET     /api/bobbit/callback                     controllers.TokenController.callback


DELETE   /api/bobbit/delete-all                controllers.BobbitController.deleteAll