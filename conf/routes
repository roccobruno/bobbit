# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


#bobbit Api
GET    /api/bobbit/fetch                    controllers.BobbitController.fetchTubeLine
GET    /api/bobbit/:id                      controllers.BobbitController.find(id:String)
POST   /api/bobbit                          controllers.BobbitController.save
DELETE /api/bobbit/:id                      controllers.BobbitController.delete(id:String)

POST   /api/bobbit/account                  controllers.BobbitController.account
GET    /api/bobbit/account/:id                  controllers.BobbitController.findAccount(id:String)

#Running job
GET      /api/bobbit/running-job/job-id/:id    controllers.BobbitController.findRunningJobByJobId(id:String)
GET      /api/bobbit/running-job/active        controllers.BobbitController.findActiveRunningJob
DELETE   /api/bobbit/running-job/id/:id        controllers.BobbitController.deleteRunningJob(id:String)


DELETE   /api/bobbit/delete-all                controllers.BobbitController.deleteAll